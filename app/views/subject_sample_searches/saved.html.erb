<%= form_tag delete_multiple_subject_sample_searches_path, method: :delete do %>
	<div class="row">
		<div class="col">
			<h1><%= dt("#{controller_name}.#{action_name}.title", model: dt("#{controller_name}.#{action_name}.model")) %></h1>
			<%= link_to dt('actions.cancel'), search_subject_sample_searches_path, class: 'btn btn-secondary' %>
			<%= submit_tag dt("#{controller_name}.#{action_name}.submit"), class: 'btn btn-danger' %>
		</div>
	</div>
	<div class="row">
		<table id="datatable_all" class="table table-striped table-bordered">
		  <thead>
			  <tr>
			    <th><%= SubjectSampleSearch.human_attribute_name(:name) %></th>
			  </tr>
		  </thead>
		  <tbody>
				<% @subject_sample_searches.each do |subject_sample_search| %>
				  <tr>
				    <td>
							<%= check_box_tag "subject_sample_searches[]", subject_sample_search.id %> <%= link_to content_tag(:span, "", :class => "fa fa-pencil"), edit_subject_sample_search_path(subject_sample_search), class: 'btn btn-small btn-primary btn-xs' %>
							<%= link_to subject_sample_search.name, subject_sample_search_path(subject_sample_search) %>
						</td>
				  </tr>
				<% end %>
		  </tbody>
		</table>
	</div>
<% end %>
