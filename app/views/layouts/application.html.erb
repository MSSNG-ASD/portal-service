<%# navigation styled for Bootstrap 4.0 %>
<%# Pre-process the local variables %>
<% body_class_public_mode = "inverse" %>
<% body_class_private_mode = "not-inverse" %>
<% if controller_name.eql?('visitors') %>
  <% if action_name.eql?('publications') %>
    <% body_class = body_class_private_mode %>
  <% else %>
    <% body_class = body_class_public_mode %>
  <% end %>
<% else %>
  <% body_class = body_class_private_mode %>
<% end %>
<%# The Layout %>
<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title><%= content_for?(:title) ? yield(:title) : "MSSNG" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "MSSNG" %>">
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>
  <body class="<%= body_class %>" data-ctrl="<%= controller_name %>" data-action="<%= action_name %>">
    <header>
      <%= render 'layouts/navigation' %>
    </header>
    <main role="main">
      <div class="container">
       <%= render 'layouts/messages' %>
       <%= yield %>
      </div>
    </main>
    <%= render 'layouts/footer' %>
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
      ga('create', '<%= Rails.application.secrets[:google_tracking_id] %>', 'auto');
      ga('send', 'pageview');
    </script>
  </body>
</html>
