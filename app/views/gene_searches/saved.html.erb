<div class="row">
  <div class="col">
    <h1><%= dt("#{controller_name}.#{action_name}.title", model: dt("#{controller_name}.#{action_name}.model")) %></h1>
  </div>
</div>
<%= form_tag delete_multiple_gene_searches_path, method: :delete do %>
  <div class="row">
    <table id="datatable_all" class="table table-striped table-bordered">
      <thead>
    	  <tr>
    	    <th><%= GeneSearch.human_attribute_name(:name) %></th>
    	  </tr>
      </thead>
      <tbody>
    		<% @gene_searches.each do |gene_search| %>
    		  <tr>
    		    <td>
    					<%= check_box_tag "gene_searches[]", gene_search.id %> <%= link_to content_tag(:span, "", class: "fa fa-pencil"), edit_gene_search_path(gene_search), class: 'btn btn-small btn-primary btn-xs' %>
    					<%= link_to gene_search.name, gene_search_path(gene_search) %>
    				</td>
    		  </tr>
    		<% end %>
      </tbody>
    </table>
  </div>
  <div class="row">
    <div class="col form-actions">
      <%= submit_tag dt("#{controller_name}.#{action_name}.submit"), class: 'btn btn-danger' %>
    </div>
  </div>
<% end %>
