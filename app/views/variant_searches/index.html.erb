<div class="row">
  <div class="col">
    <h1 class="title"><%= dt("#{controller_name}.#{action_name}.title", model: dt("#{controller_name}.#{action_name}.model")) %></h1>
    <%= link_to dt('actions.cancel'), search_variant_searches_path, class: 'btn btn-secondary' %>
    <%= link_to VariantSearch.human_attribute_name(:destroy_all), delete_all_variant_searches_path, class: 'btn btn-danger', method: :delete, data: { confirm: dt("#{controller_name}.#{action_name}.confirm") } %>
  </div>
</div>
<div class="row">
  <div class="col">
    <table id="datatable_all" class="table table-striped table-bordered">
      <thead>
        <tr>
          <th><%= VariantSearch.human_attribute_name(:name) %></th>
        </tr>
      </thead>
      <tbody>
        <% @variant_searches.each do |variant_search| %>
          <tr>
            <td>
              <%= link_to content_tag(:span, "", class: "fa fa-trash-o"), variant_search_path(variant_search), method: :delete, class: "btn btn-mini btn-danger btn-xs", data: { confirm: dt("#{controller_name}.#{action_name}.confirm", model: variant_search.name) } %>
              <%= link_to content_tag(:span, "", class: "fa fa-pencil"), edit_variant_search_path(variant_search), class: 'btn btn-small btn-primary btn-xs' %>
              <%= link_to variant_search.name, variant_search_path(variant_search), class: 'dataset-opener' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
