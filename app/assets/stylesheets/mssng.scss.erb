// /* --------- MEDIA QUERIES ----------- */

@media only screen and(min-width: 640px) {
	.navbar {
		.navbar-brand {
			aside {
				display: inline-block;
			}
		}
	}
}

@media only screen and(min-width: 768px) {
	main {
		margin-top: 132px;
		min-height: -webkit-calc(100vh - 132px - 4.5em);
		min-height: calc(100vh - 132px - 4.5em);

		.text-intro {
			line-height: 1.3;
			@include font-size(26);
		}

		.text-regular {
			line-height: 1.6;
			@include font-size(14);
		}

		.doc-list {
			@include font-size(14);
		}
	}

	.not-inverse {
		main {
			margin-top: 153px;
		}
	}
}

