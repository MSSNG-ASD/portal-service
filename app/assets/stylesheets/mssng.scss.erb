// /* --------- NAVIGATION ----------- */

.navbar {
	background: #000 url(<%= asset_path 'header-bg.png' %>) no-repeat scroll left top;

	.navbar-brand {
		display: flex;
		align-items: center;

		> img {
			max-width: 190px;
		}

		> aside {
			display: none;
			margin-left: 25px;
			font-size: 12px;
			letter-spacing: 1px;
			line-height: 1.2;
			text-align: right;
			text-transform: uppercase;

			span {
				background: transparent url(<%= asset_path 'header-autismspeaks-logo.png' %>) no-repeat scroll left top;
				display: block;
				height: 22px;
				width: 176px;
				@include text-hide();
			}
		}
	}

	.navbar-collapse {
		.navbar-nav {
			text-align: center;
			@include font-size(20);
		}

		&.collapsing, &.show {
			.navbar-nav {
				> li {
					border-bottom: 1px solid #2b2b2b;
				}
			}
		}
	}
}

// /* --------- ERROR HANDLING ----------- */

.flash-message.alert {
	margin: 2em 0;

	.inverse & {
		margin: 1em 0;
	}
}

// /* --------- MAIN ----------- */

main {
	margin-top: 70px;
	min-height: -webkit-calc(100vh - 70px - 4.5em);
	min-height: calc(100vh - 70px - 4.5em);
	padding: 0 0 2em;
	// width: 86.667%;

	.text-intro, .text-regular {
		margin: 14px 0;
	}

	.text-intro {
		@include font-size(20);
	}

	.text-regular {
		@include font-size(16);
	}

	.doc-list {
		-webkit-align-items: flex-start;
		-ms-flex-align: start;
		align-items: flex-start;
		display: block;
		display: -ms-flexbox;
		display: -webkit-flex;
		display: flex;
		-webkit-justify-content: space-between;
		-ms-flex-pack: justify;
		justify-content: space-between;
		list-style-type: none;
		margin: 1em auto;
		padding: 0;
		@include font-size(12);

		li {
			display: inline-block;
			margin: 0 2%;
			text-align: center;
			width: 27.333%;
		}

		a {
			color: #fff;
			margin: auto;
			max-width: 15em;
		}

		.pdf-doc {
			background: #000 url(<%= asset_path 'pdf-icon.png' %>) no-repeat scroll center top;
			display: block;
			padding-top: 63px;
		}

		.xls-doc {
			background: #000 url(<%= asset_path 'xls.png' %>) no-repeat scroll center top;
			display: block;
			padding-top: 82px;
		}
	}

	.awesome-share-buttons {
		background: #2e2e2e url(<%= asset_path 'darknoise.png' %>) repeat scroll left top;
		display: inline-block;
		font-size: 30px;
		margin: 14px 0;
		padding: 5px 0.667em;

		a {
			color: #fff !important;
			margin-right: 0.667em;
			text-decoration: none;

			&:last-child {
				margin-right: 0;
			}
		}

		/* override awesome share button icons */
		.fa-facebook-square::before {
			content: "\f09a";
		}

		.fa-google-plus-square::before {
			content: "\f0d5";
		}

		.fa-twitter-square::before {
			content: "\f099";
		}

		.fa-pinterest::before {
			content: "\f0d2";
		}
	}
}

.variant-table {
	[data-column="sample_id"] {
		white-space: nowrap;
	}
}

.search-item-options {
	& > .dropdown-toggle {
		background-color: transparent;
		padding: 0 5px;
		margin: 0 -5px;
		outline: none;
		box-shadow: none;
		width: 28px;

		.to-hide {
			display: none;
		}

		&::after {
			display: none;
			margin-top: -5px;
		}
	}

	& > .dropdown-menu {
		box-shadow: rgba(0, 0, 0, 0.5) 0 10px 20px;
		margin-top: -3px;
		margin-left: -8px;
	}

	&.show {
		& > .dropdown-toggle {
			background-color: #cc0000;
			color: #fff;

			.to-show {
				display: none;
			}

			.to-hide {
				display: inline-block;
			}
		}
	}
}

// /* --------- FOOTER ----------- */

footer {
	height: 4.5em;
	line-height: 4.5;
	text-align: right;

	.container-fluid {
		height: 100%;
		padding: 0;
		position: relative;
		width: 86.667%;
	}

	small {
		color: #eee;
		float: left;
	}

	p {
		background: transparent url(<%= asset_path 'puzzle-icon.png' %>) no-repeat scroll right center;
		bottom: 0;
		display: inline-block;
		height: 22px;
		letter-spacing: 1px;
		line-height: 27px;

		margin: auto;
		padding-right: 25px;
		position: absolute;
		right: 0;
		text-transform: uppercase;
		top: 0;
		white-space: nowrap;
	}

	&.autism {
		background: #000 url(<%= asset_path 'footer-bg.jpg' %>) no-repeat scroll left top;
		background-size: cover;

		p {
			color: #eee;
		}
	}

	.inverse & {
		background-color: #000;

		p {
			color: #fff;
		}
	}
}

