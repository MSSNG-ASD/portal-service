	font-size: 62.5%;
}

body[data-ctrl="errors"] main .container {
  max-width: 480px;
	padding: 20px 0;

	.card {
		margin: 20px 0;
	}
}

@media (min-width:768px) {
	.dropdown:hover .dropdown-menu {
		// display: block;
	}
}

@media only screen and (min-width: 768px) and (min-height: 1024px) , only screen and (min-width: 1024px) and (min-height: 860px) {
	body {
		margin-bottom: 4.5em !important;
	}

	.container.intro {
		display: table;
		height: -webkit-calc(100vh - 132px - 4.5em);
		height: calc(100vh - 132px - 4.5em);
		width: 100%;

		.row {
			display: table-cell;
			height: 100%;
			margin: auto;
			overflow: auto;
			vertical-align: middle;
		}
	}


	footer {
		bottom: 0;
		left: 0;
		position: fixed;
		right: 0;
		> .container-fluid {
			a {
				color: white;
			}
		}
	}
}

@media only screen and(min-width: 992px) {
	.navbar {
		min-height: 132px;
		background-size: auto 100%;

		.navbar-brand > img {
			max-width: 239px;
		}

		&.navbar-expand-lg {
			> .container-fluid {
				flex-direction: column;
				align-items: start;
			}

			.navbar-collapse {
				margin-top: 10px;
				background-color: rgba(0, 0, 0, 0.5);
			}

			.navbar-nav {
				padding-top: 0.5rem;
				padding-bottom: 0.5rem;
			}

			.nav-item {
				border-right: 1px solid #fff;

				.nav-link {
					padding-top: 0;
					padding-bottom: 0;
				}

				&.dropdown {
					border-right: none;
				}
			}
		}
	}
}

@media only screen and(min-width: 1280px) {
	main {
		.text-intro {
			@include font-size(32);
		}

		.text-regular {
			@include font-size(18);
		}

		.doc-list {
			@include font-size(18);
		}
	}
}

@media only screen and(min-width: 1440px) {
	.navbar {
		> .container-fluid {
			.navbar-collapse, .navbar-collapse.in {
				@include font-size(14);
			}
		}
	}
}

@media only screen and(min-width: 1920px) {
	main {
		.text-intro {
			@include font-size(40);
		}

		.text-regular {
			@include font-size(22);
		}

		.doc-list {
			a {
				@include font-size(22);
			}
		}
	}
}